@page "{id:Guid}"
@model Blog_App.Pages.Admin.Blogs.EditModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Edit blog Post</h1>

    </div>

</div>
@if (Model.BlogPost != null)
{
    <div>
        <div class="container">
            <form method="post">

                <div class="mb-3">
                    <label for="" class="form-label">Id</label>
                    <input type="test" class="form-control" id="id" asp-for="BlogPost.Id" readonly />

                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Heading</label>
                    <input type="test" class="form-control" id="heading" asp-for="BlogPost.Headig" />

                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Page Title</label>
                    <input type="text" class="form-control" id="pageTitle" asp-for="BlogPost.PageTitle" />
                </div>

                <div class="mb-3">
                    <label for="" class="form-label">Content</label>
                    <textarea type="text" class="form-control" id="content" asp-for="BlogPost.Content"></textarea>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Short Description</label>
                    <input type="text" class="form-control" id="shortDescription" asp-for="BlogPost.ShortDescription" />
                </div>

                <div class="mb-3">
                    <label for="" class="form-label">Featured Image Url</label>
                    <input type="text" class="form-control" id="featuredImageUrl" asp-for="BlogPost.FeaturedImageUrl" />
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Url Handle</label>
                    <input type="text" class="form-control" id="urlHandle" asp-for="BlogPost.UrlHandle" />
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Published Date</label>
                    <input type="date" class="form-control" id="publishedDate" asp-for="BlogPost.PublishedDate" />
                </div>

                <div class="mb-3">
                    <label for="" class="form-label">Author</label>
                    <input type="text" class="form-control" id="author" asp-for="BlogPost.Author" />
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="isVisible" asp-for="BlogPost.Visible">
                    <label class="form-check-label" for="flexCheckDefault">
                        Is Visible
                    </label>
                </div>

                <div class="mb-3">
                    <button class="btn btn-outline-primary" type="submit" asp-page-handler="Edit">Submit</button>
                    <button class="btn btn-outline-danger" type="submit" asp-page-handler="Delete">Delete</button>
                </div>

            </form>
        </div>
    </div>
}
else
{
    <div class="container">
        <p>Blog Post Not Found</p>
    </div>
}
