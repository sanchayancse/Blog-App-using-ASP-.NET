@page
@model Blog_App.Pages.Admin.Blogs.ListModel
@{
}
<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Blogs</h1>

    </div>

</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Heading</td>
               
            </tr>
        </thead>

        <tbody>
            
            @foreach(var blogpost in Model.BlogPosts){
                <tr>
                    <td>@blogpost.Id</td>
                    <td>@blogpost.Headig</td>
                    <td><a href="/Admin/Blogs/Edit/@blogpost.Id">View</a></td>


                </tr>
            }

        </tbody>
    </table>
</div>